<?xml version="1.0" encoding="utf-8"?>
<MBeautifySettings>
    
    <!--Operator rules-->
    <OperatorPadding>
        
        <OperatorPaddingRule>
            <Key>ShortCircuitAnd</Key>
            <ValueFrom>&amp;&amp;</ValueFrom>
            <ValueTo> &amp;&amp; </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>ShortCircuitOr</Key>
            <ValueFrom>||</ValueFrom>
            <ValueTo> || </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>LogicalAnd</Key>
            <ValueFrom>&amp;</ValueFrom>
            <ValueTo> &amp; </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>LogicalOr</Key>
            <ValueFrom>|</ValueFrom>
            <ValueTo> | </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Greater</Key>
            <ValueFrom>&gt;</ValueFrom>
            <ValueTo> &gt; </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>GreaterEquals</Key>
            <ValueFrom>&gt;=</ValueFrom>
            <ValueTo> &gt;= </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Equals</Key>
            <ValueFrom>==</ValueFrom>
            <ValueTo> == </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>NotEquals</Key>
            <ValueFrom>~=</ValueFrom>
            <ValueTo> ~= </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Assignment</Key>
            <ValueFrom>=</ValueFrom>
            <ValueTo> = </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Less</Key>
            <ValueFrom>&lt;</ValueFrom>
            <ValueTo> &lt; </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>LessEquals</Key>
            <ValueFrom>&lt;=</ValueFrom>
            <ValueTo> &lt;= </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Plus</Key>
            <ValueFrom>+</ValueFrom>
            <ValueTo> + </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Minus</Key>
            <ValueFrom>-</ValueFrom>
            <ValueTo> - </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>ElementWiseMultiplication</Key>
            <ValueFrom>.*</ValueFrom>
            <ValueTo> .* </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Multiplication</Key>
            <ValueFrom>*</ValueFrom>
            <ValueTo> * </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>RightArrayDivision</Key>
            <ValueFrom>./</ValueFrom>
            <ValueTo> ./ </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>LeftArrayDivision</Key>
            <ValueFrom>.\</ValueFrom>
            <ValueTo> .\ </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Division</Key>
            <ValueFrom>/</ValueFrom>
            <ValueTo> / </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>LeftDivision</Key>
            <ValueFrom>\</ValueFrom>
            <ValueTo> \ </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>ElementWisePower</Key>
            <ValueFrom>.^</ValueFrom>
            <ValueTo> .^ </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Power</Key>
            <ValueFrom>^</ValueFrom>
            <ValueTo> ^ </ValueTo>
        </OperatorPaddingRule>
        
        <OperatorPaddingRule>
            <Key>Not</Key>
            <ValueFrom>~</ValueFrom>
            <ValueTo> ~</ValueTo>
        </OperatorPaddingRule>
        
    </OperatorPadding>
    
    <!--Special rules-->
    
    <SpecialRules>
        
        <SpecialRule>
            <Key>MaximalNewLines</Key>
            <Value>2</Value>  
        </SpecialRule>
        
        <SpecialRule>
            <Key>AddCommasToMatrices</Key>
            <Value>1</Value>  
        </SpecialRule>
        
    </SpecialRules>
</MBeautifySettings><!--this is a comment-->